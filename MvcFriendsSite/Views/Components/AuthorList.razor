
@using MvcFriendsSite.Models
<h3>AuthorList</h3>

<table>
    @foreach (UserModel author in ModelList)
    {
        <tr>
            <th>@author.userName</th>

            @foreach (BlogModel blog in author.Blogs)
            {

             //  <td>@blog.Name</td>
             <td><SingleBlog Blog="@blog" Url="@Url"/></td>

            }
        </tr>

    }



</table>

@code {

    [Parameter]
    public IEnumerable<UserModel> ModelList { get; set; }
    [Parameter]
    public string Url { get; set; }


}
